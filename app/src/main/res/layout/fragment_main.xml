            android:layout_height="wrap_content"
            android:background="@drawable/searchview_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/appCompatButton_community_bookmark"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:queryHint="레시피 검색"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/appCompatButton_community_bookmark"
            android:layout_width="24dp"
            android:layout_height="32dp"
            android:background="@drawable/main_button_bookmark"
            app:layout_constraintEnd_toStartOf="@id/appCompatButton_community_alarm"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:layout_marginEnd="8dp"/>
        <androidx.appcompat.widget.AppCompatButton
