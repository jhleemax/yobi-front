<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_recipe_detail_order_itemlist"
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_recipe_detail_order_itemlist_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="24dp"
        android:text="메인 설명"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageView_recipe_detail_order_itemlist"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout_recipe_detail_order_itemlist_sub_description_01"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageView_recipe_detail_order_itemlist"
        app:layout_constraintTop_toBottomOf="@id/textView_recipe_detail_order_itemlist_description">

        <ImageView
            android:id="@+id/imageView_recipe_detail_order_itemlist_sub_description_01"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/textView_recipe_detail_order_itemlist_sub_description_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="보조 설명 1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_recipe_detail_order_itemlist_sub_description_02"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageView_recipe_detail_order_itemlist"
        app:layout_constraintTop_toBottomOf="@id/linearLayout_recipe_detail_order_itemlist_sub_description_01">

        <ImageView
            android:id="@+id/imageView_recipe_detail_order_itemlist_sub_description_02"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/textView_recipe_detail_order_itemlist_sub_description_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="보조 설명 2" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>