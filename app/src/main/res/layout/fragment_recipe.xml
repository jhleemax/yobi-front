<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".recipe.Fragment_recipe"
    android:background="@color/white">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_recipe_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white">

        <SearchView
            android:id="@+id/searchView_recipe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/searchview_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/appCompatButton_recipe_bookmark"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:queryHint="레시피 검색"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/appCompatButton_recipe_bookmark"
            android:layout_width="24dp"
            android:layout_height="32dp"
            android:background="@drawable/main_button_bookmark"
            app:layout_constraintEnd_toStartOf="@id/appCompatButton_recipe_alarm"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:layout_marginEnd="8dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/appCompatButton_recipe_alarm"
            android:layout_width="28dp"
            android:layout_height="32dp"
            android:background="@drawable/main_button_alarm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:layout_marginEnd="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView_recipe_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="더보기"
        android:textSize="14sp"
        android:textColor="@color/more"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout_recipe_01"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"/>
    <HorizontalScrollView
        android:id="@+id/horizontalScrollView_recipe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView_recipe_01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="16dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/appCompatButton_recipe_korean"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/recipe_button_korean" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="한식"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="16dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/appCompatButton_recipe_japanese"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/recipe_button_japanese"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일식"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="16dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/appCompatButton_recipe_chinese"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/recipe_button_chinese"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="중식"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="16dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/appCompatButton_recipe_soup"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/recipe_button_soup"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="찌개"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="16dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/appCompatButton_recipe_night"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/recipe_button_night"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="야식"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="16dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/appCompatButton_recipe_simple"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/recipe_button_simple"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="간편식"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/appCompatButton_recipe_dessert"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/recipe_button_dessert"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="디저트"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_recipe"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/horizontalScrollView_recipe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton_recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:src="@drawable/floating_button_background"
        android:backgroundTint="@color/main_theme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:shapeAppearanceOverlay="?attr/shapeAppearanceCornerExtraLarge"/>

</androidx.constraintlayout.widget.ConstraintLayout>